@using WebApp.Model
@model WebApp.Model.mWarehouse

<div>
    <h1>Редактировать склад</h1>
    <div>
        <form asp-controller="Warehouse" asp-action="WhouseEdit" method="post">
            <input type="hidden" asp-for="wID" />

            <div>
                <div>
                    Название склада
                </div>
                <input asp-for="wName" />
                <span asp-validation-for="wName"></span>
            </div>
            <div>
                <div>
                    Меcтоположение склада
                </div>
                <div>
                    <input asp-for="wPos" />
                    <span asp-validation-for="wPos"></span>
                </div>
                <input type="submit" value="Сохранить" />
            </div>
</form>
    </div>
</div>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers